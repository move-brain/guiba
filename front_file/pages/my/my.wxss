page {
    background-color: #f1f1f1;
}

.head {
    box-sizing: border-box;
    margin-top: 30PX;
    height: 130px;
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
}

.head_image {
    font-size: x-large;
    font-weight: 700;
    height: 120px;
    width: auto;
    width: 80px;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: center;
}

.head_image image {
    border-radius: 100%;
    height: 70px;
    width: 70px;
}

.head_image view {
    box-sizing: border-box;
    margin-top: 10px;
}